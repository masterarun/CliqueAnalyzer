@{
    ViewBag.Title = "Home Page";
}

<div class="left">
    <h3>
        <span>Hash Tag Request</span>
    </h3>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="tagTable" class="table table-striped table-bordered">
            <thead style="background-color: orange;color: White; font-weight: bold; font-family: Calibri">
                <tr>
                    <th>Id</th>
                    <th>HashTag</th>
                    <th>From Date</th>
                    <th>To Date</th>
                    <th>City</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody style="font-weight: bold; font-family: Calibri" data-bind=" foreach: hashTagRequestList">
                <tr>
                    <td data-bind="text: Id"></td>
                    <td data-bind="text: Tag"></td>
                    <td data-bind="text: FromDate"></td>
                    <td data-bind="text: ToDate"></td>
                    <td data-bind="text: Location"></td>
                    <td data-bind="text: StatusName"></td>
                </tr>                
            </tbody>
        </table>

    </div>
    <div class="col-md-2 col-md-offset-10">
        <button type="button" class="btn btn-default" style="background-color: Orange;color: White; font-weight: bold; font-family: Calibri" data-dismiss="modal" data-bind="click: showTagRequestModal">
            Add New HashTag
        </button>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-bind="showModal: displayAddHashTagModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #e5e5e5">
                <button type="button" class="close" data-dismiss="modal" data-bind="click: hideTagRequestModal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add HashTag Request</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <label for="InputName">Hash Tag</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="HashTag" data-bind="value: hashTagRequestModel().tag">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <label for="InputName">City</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="HashTag" data-bind="value: hashTagRequestModel().location">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <label for="InputName">From Date</label>
                        <div class="input-group">
                            <input type="date" class="form-control" data-bind="value: hashTagRequestModel().fromDate">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <label for="InputName">To Date</label>
                        <div class="input-group">
                            <input type="date" class="form-control" data-bind="value: hashTagRequestModel().toDate">
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: hideTagRequestModal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click: addHashTagRequest">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            var viewModel = new DashboardViewModel();
            ko.applyBindings(viewModel);
        });
    </script>
}
