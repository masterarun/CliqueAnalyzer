@{
    ViewBag.Title = "Location Search";
}

<div class="panel panel-default">
    <div class="panel-heading" style="background-color:orange">
        <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse"
               href="#LocationSearch" style="color: White;
                                font-weight: bold; font-family: calibri;">
                Location Request
            </a>
        </h4>
    </div>
    <div id="LocationSearch" class="panel-body collapse in">
        <div class="row">
            <div class="col-md-2">
                <input type="text" id="apartment" class="form-control" placeholder="Apartment / House No." aria-describedby="sizing-addon2" data-bind="value: Apartment">
            </div>
            <div class="col-md-2">
                <input type="text" id="street" class="form-control" placeholder="Street" aria-describedby="sizing-addon2" data-bind="value: Street">
            </div>
            <div class="col-md-2">
                <input type="text" id="city" class="form-control" placeholder="City" aria-describedby="sizing-addon2" data-bind="value: CityName">
            </div>
            <div class="col-md-2">
                <input type="text" id="state" class="form-control" placeholder="State" aria-describedby="sizing-addon2" data-bind="value: State">
            </div>
            <div class="col-md-2">
                <input type="text" id="pinCode" class="form-control" placeholder="Pincode" aria-describedby="sizing-addon2" data-bind="value: CityName" onkeyup=" javascript: TriggerSubmit(); ">
            </div>
            <div class="col-md-2">
                <button id="getDetailsBtn" type="submit" class="btn btn-primary" style="background-color: Orange; color: White; font-weight: bold; font-family: Calibri"
                        onclick=" javscript: getLocationTweet() ">
                    Get Location Details
                </button>
            </div>
        </div>
    </div>
</div>
